<% layout("/layout/boilerplate") -%>
<style>
  .mt-3{
    margin-top: 5rem !important;
  }
</style>


<div class="row mt-3">
  <h1 class="text-center mb-4" style="color:#0d6efd;">Signup on DesiNest</h1>
  <div class="col-md-6 offset-md-3 signup-container">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" type="text" class="form-control form-control-sm" required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" id="email" type="email" class="form-control form-control-sm" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" type="password" class="form-control form-control-sm" required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success w-100">Sign Up</button>
    </form>
  </div>
</div>
